<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="class1" class="com.example.tuan06.Bai1.model.exampleWithBeans.Class">
        <property name="id" value="DHKTPM18ATT"/>
        <property name="name" value="Dai Hoc 18 ATT" />
    </bean>

<!--    DÙNG 1 TRONG 2 CÁCH -->

<!--    Dùng property thì thêm getter/setter-->
<!--    cách hd: new Student();  setID(), setName(), setAclass()-->
    <bean id="student1" class="com.example.tuan06.Bai1.model.exampleWithBeans.Student">
        <property name="id" value="001"/>
        <property name="name" value="Nguyen Van A"/>
        <property name="aclass" ref="class1"></property>
    </bean>

