<!--    VD Collection Injection-->
    <bean id="address1" class="com.example.tuan06.Bai1.model.collectionExample.Address">
        <property name="city" value="Brisbane"/>
        <property name="country" value="Austrailia"/>
        <property name="street" value="something" />
    </bean>
    <bean id="address2" class="com.example.tuan06.Bai1.model.collectionExample.Address">
        <property name="city" value="TPHCM"/>
        <property name="country" value="VietNam"/>
        <property name="street" value="Phu Nhuan" />
    </bean>

    <bean id="person1" class="com.example.tuan06.Bai1.model.collectionExample.Person">
        <property name="name" value="Alex"/>
        <property name="adresses">
            <list>
                <ref bean="address1"></ref>
                <ref bean="address2"></ref>
            </list>
        </property>
        <property name="age" value="20"/>
        <property name="emails">
            <list>
                <value>Alex@gamil.com</value>
                <value>Hoho@gamil.com</value>
            </list>
        </property>
    </bean>
</beans>